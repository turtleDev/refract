# You can use this configuration as a starting point
# for hosting your own distribution of refract

server { 
        listen 80 default_server; 
        server_name _; 
 
        location / { 
                proxy_pass http://localhost:8000; 
        } 
         
        location ~ /(js|images|css|fonts) { 
                gzip on;
                gzip_types *;
                root /path/to/app/.build/; 
        } 
}

